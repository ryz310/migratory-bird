{
  "manifest_version": 2,
  "name": "Migratory Bird",
  "short_name": "MB",
  "version": "0.2.2",
  "description": "Convert markdown from esa.io to slack format",
  "icons": {
    "128": "assets/icon.png"
  },
  "author": "ryz310@gmail.com",
  "content_scripts": [
    {
      "matches": ["https://*.esa.io/posts/*"],
      "css": [
        "css/migratory_bird.css"
      ],
      "js": [
        "js/migratory_bird.js"
      ]
    }
  ]
}
